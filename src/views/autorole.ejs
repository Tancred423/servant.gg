<%- include('partials/header-2') -%>
<%- include('partials/nav') -%>
<%- include('partials/nav-highlights/nav-dash') -%>

<script>
    var botRoles = <%- JSON.stringify(botGuild.roles.cache) %>;
</script>

<% var plugin = 'checked'; %>
<% if (disabled_plugins[0]) { %>
<% plugin = '';  %>
<% } %>

<div class="main-wrapper">
    <div class="dash-user-wrapper">
        <div class="dash-featured">
            <div id="meta"></div>
            <h1>Dashboard:
                <% if (guild.icon === null) { %>
                <img src="/images/no_user.png" alt="Default Server Icon">
                <% } else { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="Server Icon">
                <% } %>
                <%= guild.name %>
            </h1>
            <div class="path"><a href="/">Home</a> > <a href="/dashboard">Dashboard</a> > <a href="/dashboard/<%= guild.id %>"><%= guild.name %></a> > <a href="/dashboard/<%= guild.id %>/moderation">Moderation</a> > <a href="/dashboard/<%= guild.id %>/moderation/autorole">Auto Role</a></div>
        </div>
        <div class="main-content banner">
            <div class="padding-top padding-bottom padding-left padding-right">
                <div class="global-switch">
                    <div id="dismissible-item-plugins" data-component="dismissible-item" data-type="error" data-value="Error: Couldn't update plugin toggle."></div>
                    <span><i class="fas fa-user-cog"></i> Auto Role Plugin</span>
                    <label class="switch">
                        <input name="<%= guild.id %>" type="checkbox" onclick="submit_plugins(this, 'autorole')" <%= plugin %>>
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="plugin-sub-featured">
            <!-- <div class="padding-top padding-bottom padding-left padding-right"> -->
            <div class="container">
                <div class="container-title">
                    <div class="left">
                        <h2>Auto Role</h2>
                    </div>
                    <div class="right">
                        <div class="right-left">
                            <span class="circle-label"></span>
                        </div>
                        <div class="right-right">
                            <div class="circle-loader">
                                <div class="checkmark draw"></div>
                                <div class="errormark draw"></div>
                                <div class="errormark2 draw"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <form action="/submit/autorole" method="POST" id="form_autorole">

                    <div class="container1">
                        <button class="add_form_field btn-redirect empty">+ Add
                        </button>
                        <div id="dismissible-item" data-component="dismissible-item" data-type="error" data-value="Error: You cannot set he same role twice."></div>


                        <% let i = 1 %>
                        <% if (autoroles.length > 0) { %>
                        <% for (i = 1; i <= autoroles.length; i++) { %>
                        <% const autorole = autoroles[i - 1]; %>

                        <div class="roles">
                            <a href="#" class="delete"><i class="fas fa-times-circle"></i></a>
                            <select onchange="submit_auto_roles();setColor(this);" id="role_<%= i %>" name="role_<%= i %>" class="role_<%= i %>">
                                <option value="0" disabled>Select a role</option>

                                <% botGuild.roles.cache.forEach(role => { %>
                                <% let selected = autorole.role_id === role.id ? "selected" : ""; %>
                                <% if (role.name !== "@everyone") { %>
                                <% let colorcode = role.color === 0 ? "FFFFFF" : role.color.toString(16); %>
                                <option value="<%= role.id %>" <%= selected %> style="color: #<%= colorcode %>;">
                                    <%= role.name  %>
                                </option>
                                <% } %>
                                <% }); %>
                            </select>
                            <% let delay = autorole.delay === 0 ? "" : autorole.delay; %>
                            <input type="number" id="delay_<%= i %>" name="delay_<%= i %>" placeholder="delay (min)" onkeyup="handle_delay(this)" value="<%= delay %>">
                        </div>
                        <% } %>
                        <% } %>
                    </div>

                    <!-- to include it in url params -->
                    <input type="hidden" id="guild_id" name="guild_id" value="<%= guild.id %>" />
                </form>
            </div>

            <!-- </div> -->
        </div>
    </div>
</div>

<%- include('partials/footer') -%>

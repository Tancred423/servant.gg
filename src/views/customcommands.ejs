<meta property="twitter:description" content="Create custom commands!">
<meta property="twitter:image" content="https://i.imgur.com/lLuoClj.jpg">
<%- include('partials/header-2') -%>
<%- include('partials/nav') -%>
<%- include('partials/nav-highlights/nav-dash') -%>

<script>
  var botRoles = <%- JSON.stringify(botGuild.roles.cache) %>;
  var botChannels = <%- JSON.stringify(botGuild.channels.cache) %>;
  var var_is_supporter = <%- JSON.stringify(isSupporter); %>;
  var var_color_code = <%- JSON.stringify(color_code); %>;
  var var_guild = <%- JSON.stringify(guild); %>;
  var varCcs = <%- JSON.stringify(ccs); %>;
  var varCcEmbeds = <%- JSON.stringify(ccEmbeds); %>;
  var varCcFields = <%- JSON.stringify(ccFields); %>;
  var var_timestamp_tzs = <%- JSON.stringify(timestamp_tz_formats); %>;
  var var_prefix = <%- JSON.stringify(prefix); %>;
  var varCommandsAmount = <%- JSON.stringify(commandsAmount); %>;
</script>

<% var plugin = 'checked'; %>
<% if (disabled_plugins[0]) { %>
<% plugin = '';  %>
<% } %>

<div class="main-wrapper">
  <div class="dash-user-wrapper">
    <div class="dash-featured">
      <div id="meta"></div>
      <h1>Dashboard:
        <% if (guild.icon === null) { %>
        <img src="/images/no_user.png" alt="Default Server Icon">
        <% } else { %>
        <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="Server Icon">
        <% } %>
        <%= guild.name %>
      </h1>
      <div class="path"><a href="/">Home</a> > <a href="/dashboard">Dashboard</a> > <a href="/dashboard/<%= guild.id %>"><%= guild.name %></a> > <a href="/dashboard/<%= guild.id %>/moderation">Moderation</a> > <a href="/dashboard/<%= guild.id %>/moderation/customcommands">Custom Commands</a></div>
    </div>
    <div class="main-content banner">
      <div class="padding-top padding-bottom padding-left padding-right">
        <div class="global-switch">
          <div id="dismissible-item-plugins" data-component="dismissible-item" data-type="error" data-value="Error: Couldn't update plugin toggle."></div>
          <span><i class="fas fa-user-cog"></i> Custom Commands Plugin</span>
          <label class="switch">
            <input name="<%= guild.id %>" type="checkbox" onclick="submit_plugins(this, 'customcommands')" <%= plugin %> />
            <span class="slider round"></span>
          </label>
        </div>
      </div>
    </div>
    <div class="com-sub-featured">
      <div class="padding-top padding-bottom padding-left padding-right">

        <!-- Trigger/Open The Modal -->
        <button id="reactionrole-modal-create-button" class="btn-redirect center-button mobile-right" onclick="open_modal_create_cc(this);">+ Create</button>

        <div id="cc_amount_wrapper">
          <div id="cc_amount">
            Total commands: <%= commandsAmount %> / 100
          </div>
        </div>

        <!-- The message list -->
        <% if (ccs.length > 0) { %>
        <% for (let i = 0; i < ccs.length; i++) { %>
        <% const cc = ccs[i]; %>
        <div class="cc_msg">
          <div class="cc_invoke">
            <%= prefix %><%= cc.invoke %>
          </div>
          <div class="cc_msg_type">
            <%= cc.normal_msg ? 'Normal' : 'Embed' %>
          </div>
          <div class="edit-buttons">
            <div class="edit-button">
              <button id="reactionrole-modal-edit-button" class="btn-redirect empty" name="<%= cc.invoke %>" onclick="open_modal_edit_cc(this);">
                <i class="fas fa-edit"></i> <span class="hide-on-mobile">Edit</span>
              </button>
            </div>
            <div class="delete-button">
              <button id="reactionrole-delete-button" class="btn-redirect btn-danger empty" name="<%= guild.id %>|<%= cc.invoke %>" onclick="delete_cc(this);">
                <i class="fas fa-trash"></i> <span class="hide-on-mobile">Delete</span>
              </button>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>

        <div id="modals-wrapper">

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>

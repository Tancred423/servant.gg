<%- include('partials/header-1') -%>
<!-- Primary Meta Tags -->
<title>Servant | Dashboard: <%= guild.name %></title>
<meta name="title" content="Servant | Dashboard: <%= guild.name %> — Manage your server!">
<meta name="description" content="Manage server settings. Toggle features, categories, commands and plugins!">

<!-- SEO -->
<meta name="keywords" content="discord,discordbot,bot,bots,servant,moderation,information,fun,interaction,random,utility,role management,channel management,management,leveling,giveaways,giveaway,polls,poll,level,levels,social interactions,anime,voice management,voice channel,voice,embed,profile,birthday,coinflip,remindme,reminder,timezone">
<meta name="robots" content="index, follow">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta name="language" content="English">
<meta name="revisit-after" content="30 days">
<meta name="author" content="Tancred#0001">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="https://servant.gg/<%= guild.id %>">
<meta property="og:title" content="Servant | Dashboard: <%= guild.name %> — Manage your server!">
<meta property="og:description" content="Manage server settings. Toggle features, categories, commands and plugins!">
<meta property="og:image" content="https://i.imgur.com/lLuoClj.jpg">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="https://servant.gg/<%= guild.id %>">
<meta property="twitter:title" content="Servant | Dashboard: <%= guild.name %> — Manage your server!">
<meta property="twitter:description" content="Manage server settings. Toggle features, categories, commands and plugins!">
<meta property="twitter:image" content="https://i.imgur.com/lLuoClj.jpg">
<%- include('partials/header-2') -%>
<%- include('partials/nav') -%>
<%- include('partials/nav-highlights/nav-dash') -%>

<div class="main-wrapper">
    <div class="dash-user-wrapper">
        <div class="dash-featured">
            <div id="meta"></div>
            <h1>Dashboard:
                <% if (guild.icon === null) { %>
                <img src="/images/no_user.png" alt="Default Server Icon">
                <% } else { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="Server Icon">
                <% } %>
                <%= guild.name %>
            </h1>
            <div class="path"><a href="/">Home</a> > <a href="/dashboard">Dashboard</a> > <a href="/dashboard/<%= guild.id %>"><%= guild.name %></a></div>
        </div>
        <div class="main-content padding-top padding-bottom padding-left padding-right">
            <div id="dashboard-content">
                <%- include('partials/guild_settings') -%>

                <!-- Hide one divider depending on window size -->
                <div class="dashboard-divider-h">
                    <%- include('partials/divider-h') -%>
                </div>
                <div class="dashboard-divider-v">
                    <%- include('partials/divider-v') -%>
                </div>

                <%- include('partials/guild_categories') -%>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>

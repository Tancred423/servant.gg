<meta property="twitter:image" content="https://i.imgur.com/lLuoClj.jpg">
<%- include('partials/header-2') -%>
<%- include('partials/nav') -%>
<%- include('partials/nav-highlights/nav-dash') -%>

<% var plugin = 'checked'; %>
<% if (disabled_plugins[0]) { %>
<% plugin = '';  %>
<% } %>

<% let join_message; %>
<% let tc_id; %>

<% let join; %>
<% if (joins.length > 0) { %>
<% join = joins[0]; %>
<% } %>

<% if (join !== undefined) { %>
<% join_message = join.msg; %>
<% tc_id = join.tc_id; %>
<% } else { %>
<% join_message = 'Enjoy your stay!'; %>
<% tc_id = '0'; %>
<% } %>

<% let join_msg_req = ''; %>
<% if (join_message) join_msg_req = 'required'; %>

<div class="main-wrapper">
    <div class="dash-user-wrapper">
        <div class="dash-featured">
            <div id="meta"></div>
            <h1>Dashboard:
                <% if (guild.icon === null) { %>
                <img src="/images/no_user.png" alt="Default Server Icon">
                <% } else { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="Server Icon">
                <% } %>
                <%= guild.name %>
            </h1>
            <div class="path"><a href="/">Home</a> > <a href="/dashboard">Dashboard</a> > <a href="/dashboard/<%= guild.id %>"><%= guild.name %></a> > <a href="/dashboard/<%= guild.id %>/moderation">Moderation</a> > <a href="/dashboard/<%= guild.id %>/moderation/join">Join</a></div>
        </div>
        <div class="main-content banner">
            <div class="padding-top padding-bottom padding-left padding-right">
                <div class="global-switch">
                    <div id="dismissible-item-plugins" data-component="dismissible-item" data-type="error" data-value="Error: Couldn't update plugin toggle."></div>
                    <span><i class="fas fa-user-cog"></i> Join Plugin</span>
                    <label class="switch">
                        <input name="<%= guild.id %>" type="checkbox" onclick="submit_plugins(this, 'join')" <%= plugin %>>
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="plugin-sub-featured">
            <div class="container">
                <div class="container-title">
                    <div class="left">
                        <h2>Join</h2>
                    </div>
                    <div class="right">
                        <div class="right-left">
                            <span class="circle-label"></span>
                        </div>
                        <div class="right-right">
                            <div class="circle-loader">
                                <div class="checkmark draw"></div>
                                <div class="errormark draw"></div>
                                <div class="errormark2 draw"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="padding-top padding-bottom padding-left padding-right">
                    <form action="/submit/join" method="POST" id="form_join">
                        <div class="settings-disclaimer">
                            <div>A custom message for joining members.</div>
                            <br />
                            <div class="form-group">
                                <textarea onkeyup="setRequired(this);handle_join_msg(this);" id="join_msg" name="join_msg" maxlength="2048" <%= join_msg_req %>><%= join_message %></textarea>
                                <label for="join_msg" class="control-label">Welcome Message</label><i class="bar"></i>
                            </div>
                        </div>
                        <div class="settings-disclaimer">
                            <div>This is the text channel the welcome messages will be posted in.</div>
                            <br />
                            <div class="form-group">
                                <% let default_selected = ''; %>
                                <% if (tc_id === '0') { %>
                                <% default_selected = 'selected'; %>
                                <% } %>

                                <select id="tc" name="tc" onchange="changeTcSel(this);submit_join();">
                                    <option value="0" <%= default_selected %>>No text channel</option>
                                    <% botGuild.channels.cache.forEach(channel => { %>
                                    <% if (channel.type === 'text' || channel.type === 'news') { %>
                                    <% let selected = '' %>
                                    <% if (channel.id === tc_id) { %>
                                    <% selected = 'selected'; %>
                                    <% } %>
                                    <option value="<%= channel.id %>" <%= selected %>>#<%= channel.name %> <%= channel.parent ? '(' + channel.parent.name + ')' : '' %></option>
                                    <% } %>
                                    <% }); %>
                                </select>
                                <label for="tc" class="control-label">Text Channel</label><i class="bar"></i>
                            </div>
                        </div>
                        <!-- to include it in url params -->
                        <input type="hidden" id="guild_id" name="guild_id" value="<%= guild.id %>" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>

<% 
const plugin = disabledPlugins[0] ? '' : 'checked';
const leave = leaves.length > 0 ? leaves[0] : undefined;
const leaveMessage = leave ? leave.msg : 'We are sorry to see you go!';
const tcId = leave ? leave.tc_id : '0';
const leaveMsgReq = leaveMessage ? 'required' : '';
%>

<div class="main-wrapper">
    <div class="dash-user-wrapper">
        <div class="dash-featured">
            <div id="meta"></div>
            <h1>Dashboard:
                <% if (guild.icon === null) { %>
                <img src="/images/no_user.png" alt="Default Server Icon">
                <% } else { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="Server Icon">
                <% } %>
                <%= guild.name %>
            </h1>
            <div class="path"><a href="/">Home</a> > <a href="/dashboard">Dashboard</a> > <a href="/dashboard/<%= guild.id %>"><%= guild.name %></a> > <a href="/dashboard/<%= guild.id %>/moderation">Moderation</a> > <a href="/dashboard/<%= guild.id %>/moderation/leave">Leave</a></div>
        </div>
        <div class="main-content banner">
            <div class="padding-top padding-bottom padding-left padding-right">
                <div class="global-switch">
                    <div id="dismissible-item-plugins" data-component="dismissible-item" data-type="error" data-value="Couldn't update plugin toggle."></div>
                    <span><i class="fas fa-user-cog"></i> Leave Plugin</span>
                    <label class="switch">
                        <input name="<%= guild.id %>" type="checkbox" onclick="submitPlugins(this, 'leave')" <%= plugin %>>
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="plugin-sub-featured">
            <div class="container">
                <div class="container-title">
                    <div class="left">
                        <h2>Leave</h2>
                    </div>
                    <div class="right">
                        <div class="right-left">
                            <span class="circle-label"></span>
                        </div>
                        <div class="right-right">
                            <div class="circle-loader">
                                <div class="checkmark draw"></div>
                                <div class="errormark draw"></div>
                                <div class="errormark2 draw"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="padding-top padding-bottom padding-left padding-right">
                    <form action="/submit/leave" method="POST" id="form-leave">
                        <div class="settings-disclaimer">
                            <div class="ms-title">Farewell Message</div>
                            <div class="ms-description">A custom message for leaving members.</div>
                            <div class="form-group">
                                <textarea onkeyup="setRequired(this); handleLeaveMsg(this);" id="leave-msg" name="leave-msg" maxlength="2048" <%= leaveMsgReq %>><%= leaveMessage %></textarea>
                                <i class="bar"></i>
                            </div>
                        </div>
                        <div class="settings-disclaimer">
                            <div class="ms-title">Farewell Announcement</div>
                            <div class="ms-description">This is the text channel the farewell messages will be posted in.</div>
                            <div class="form-group">
                                <% const defaultSelected = tcId === '0' ? 'selected' : ''; %>
                                <select id="tc" name="tc" onchange="changeTcSel(this); submitLeave();">
                                    <option value="0" <%= defaultSelected %>>No text channel</option>
                                    <% botGuild.channels.cache.forEach(channel => { %>
                                    <%     if (channel.type === 'text' || channel.type === 'news') { %>
                                    <%         let selected = channel.id === tcId ? 'selected' : ''; %>
                                    <option value="<%= channel.id %>" <%= selected %>>#<%= channel.name %> <%= channel.parent ? '(' + channel.parent.name + ')' : '' %></option>
                                    <%     } %>
                                    <% }); %>
                                </select>
                                <i class="bar"></i>
                            </div>
                        </div>
                        <!-- to include it in url params -->
                        <input type="hidden" id="guild-id" name="guild-id" value="<%= guild.id %>" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>

<%
getLevelFromExp = function(exp) {
    let remainingExp = exp;
    let level = 0;
    while (remainingExp >= getLevelExp(level)) {
        remainingExp -= getLevelExp(level);
        level++;
    }
    return level;
}

getLevelExp = function (level) {
    return 5*(level*level)+50*level+100;
}

getTotalLevelExp = function (level) {
    let totalExp = 0;
    for (let i = level; i >= 0; i--) totalExp += getLevelExp(i);
    return totalExp;
}

getLevelPercent = function (hasExp, needsExp) {
    return Math.floor(hasExp / needsExp * 100);
}

